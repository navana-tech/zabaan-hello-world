<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="0"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toStartOf="@+id/confirm_tick"
        app:layout_constraintStart_toEndOf="@+id/backspace"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <TextView
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:text="1"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="2"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="3"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="4"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <TextView
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="5"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <TextView
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="6"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <TextView
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="7"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <TextView
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="8"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <TextView
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:text="9"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/six" />


    <ImageButton
        android:id="@+id/backspace"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:src="@drawable/back_space_black"
        android:tag="backspace"
        app:layout_constraintEnd_toStartOf="@+id/zero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seven" />


    <ImageButton
        android:id="@+id/confirm_tick"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/grey_background_black_border"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:tag="confirm"
        android:padding="10dp"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/confirm_tick_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/nine" />

</androidx.constraintlayout.widget.ConstraintLayout>